#!/usr/bin/env bash

terminal=" Alacritty"
files=" Thunar"
editor=" Code"


if [ x"$@" = x"$terminal" ]
then
	coproc ( sudo -A alacritty  > /dev/null  2>&1 )
	exit 0
fi
if [ x"$@" = x"$files" ]
then
	coproc ( sudo -A dbus-run-session thunar  > /dev/null  2>&1 )
	exit 0
fi
if [ x"$@" = x"$editor" ]
then
	coproc ( sudo -A code  > /dev/null  2>&1 )
	exit 0
fi



echo $terminal
echo $files
echo $editor
