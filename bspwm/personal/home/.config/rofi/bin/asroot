DIR="$HOME/.config"

rofi_command="rofi -theme $DIR/rofi/themes/asroot.rasi"

# Apps
terminal="󰨊 Kitty"
files="󱂵 Thunar"
editor="󱞎 Gedit"

# Variable passed to rofi
options="$terminal\n$files\n$editor"


export SUDO_ASKPASS=~/.config/rofi/bin/askpass

# Functions

chosen="$(echo -e "$options" | $rofi_command -p "Run apps as root" -dmenu -selected-row 0)"
case $chosen in
    $terminal)
        sudo -A  kitty
        ;;
    $files)
        sudo -A dbus-run-session thunar
        ;;
    $editor)
        sudo -A gedit
        ;;
esac


