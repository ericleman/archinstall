#################################################################
# KEYBOARD BINDINGS FOR ANY TWM
#################################################################

#File-Manager
super + shift + Return
	thunar

#Terminal
super + Return
	kitty

#Chrome
super + ctrl + Return
	google-chrome-stable



# Rofi App Launcher
alt + F1
	sh ~/.config/rofi/bin/launcher

# Rofi Network Menu
super + n
	networkmanager_dmenu

Print 
	sh ~/.config/rofi/bin/screenshot

#Reload bspwm
super + shift + r
	~/.config/bspwm/bspwmrc

#kill
super + shift + q
	bspc node -c


## super & mouse scroll
# Switch workspace
super + button{4,5}
  bspc desktop -f {prev.local,next.local}
  
# Send focused window to another workspace
super + shift + button{4,5}
  bspc node -d {prev.local,next.local} --follow
  
# Focused desktop window gap
super + ctrl + button{4,5}
  bspc config -d focused window_gap $((`bspc config -d focused window_gap` {-,+} 2 ))
  
# Split horizontal, vertical or cancel
super + {h,v,q}
	bspc node -p {east,south,cancel}

# Fullscreen or Monocle
super + shift + space
    bspc node -t "~"fullscreen

# Toggle beetwen floating & tiled
super + space
    bspc node -t "~"{floating,tiled}

# Swap with biggest window
super + ctrl + space
    bspc node -s biggest.window


# Send the window to another edge of the screen or Swap windows
super + {_,ctrl + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

# Change focus to next window, including floating window
alt + {_,shift + }Tab
	bspc node -f {next.local,prev.local}

# Switch workspace
super + alt + {Left,Right}
	bspc desktop -f {prev.local,next.local}

# Send focused window to another workspace
super + shift + {Left,Right}
	bspc node -d {prev.local,next.local} --follow

# Switch to last opened workspace
super + Tab
	bspc desktop -f last

# Switch to another workspace
super + {_,shift + }{F1,F2,F3,F4,F5,F6,F7,F8}
	bspc {desktop -f,node -d} '^{1-8}'

# Expanding windows
super + control + {h,j,k,l}
	bspc node -z {left -20 0,top 0 -20,bottom 0 20,right 20 0}
	
## Shrinking windows
super + alt + {h,j,k,l}
	bspc node -z {left 20 0,top 0 20,bottom 0 -20,right -20 0}
	

