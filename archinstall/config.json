{
    "additional-repositories": "multilib",
    "audio": "pipewire",
    "bootloader": "grub-install",
    "custom-commands": [
        "usermod -a -G vboxsf eric",
        "mkdir -p /root/.ansible/plugins/modules",
        "curl -o /root/.ansible/plugins/modules/aur.py https://raw.githubusercontent.com/kewlfft/ansible-aur/master/plugins/modules/aur.py",
        "git clone https://github.com/ericleman/archinstall.git",
        "cd /archinstall/DUMMY_DESKTOP; ansible-playbook -vvv main.yaml"
    ],    
    "gfx_driver": "All open-source (default)",
    "harddrives": [
        "/dev/sda"
    ],
    "hostname": "archlinux",
    "kernels": [
        "linux"
    ],
    "keyboard-layout": "fr",
    "mirror-region": {},
    "nic": {
        "NetworkManager": true,
        "dhcp": true,
        "dns": null,
        "gateway": null,
        "iface": null,
        "ip": null,
        "type": "nm"
    },
    "ntp": true,
    "packages": [
        "virtualbox-guest-utils",
        "git",
        "base-devel",
        "ansible"
    ],
    "profile": "minimal",
    "services": ["vboxservice"],
    "script": "guided",
    "swap": true,
    "sys-encoding": "UTF-8",
    "sys-language": "en_DK",
    "timezone": "Europe/Paris"
}
