{
    "audio": "pipewire",
    "bootloader": "grub-install",
    "custom-commands": [
        "usermod -a -G vboxsf eric",
        "cp -R ansible/ /mnt/archinstall/"
    ],    
    "gfx_driver": "All open-source (default)",
    "harddrives": [
        "/dev/sda"
    ],
    "hostname": "archlinux",
    "kernels": [
        "linux"
    ],
    "keyboard-layout": "fr",
    "mirror-region": {},
    "nic": {
        "NetworkManager": true,
        "dhcp": true,
        "dns": null,
        "gateway": null,
        "iface": null,
        "ip": null,
        "type": "nm"
    },
    "ntp": true,
    "packages": [
        "virtualbox-guest-utils",
        "git",
        "base-devel"
    ],
    "profile": "gnome",
    "services": ["vboxservice"],
    "script": "guided",
    "swap": true,
    "sys-encoding": "UTF-8",
    "sys-language": "en_DK.UTF-8",
    "timezone": "Europe/Paris"
}
