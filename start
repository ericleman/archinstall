pacman -Sy --noconfirm git

git clone https://github.com/ericleman/archinstall.git

cd archinstall

sed -i 's%DUMMYPASSWORD%$1%g' creds.json

archinstall --config config.json --disk-layout disk_layouts.json --creds creds.json

